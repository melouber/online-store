<%- include('header', {title: 'Koszyk'}) %>

<div class="container">
    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Koszyk </h5>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" href="/" class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-share-alt"></span> Kontynuuj zakupy
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <% products.forEach(function(product) { %>
                        <div class="row">
                            <div class="col-xs-2"><img class="img-responsive" src="http://placehold.it/100x70">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name"><strong><%= product.name %></strong></h4><h4><small><%= product.description %></small></h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6><strong><%= product.price %> <span class="text-muted">zł</span></strong></h6>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control input-sm" value="<%=product.quantity%>">
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" class="btn btn-link btn-xs">
                                        <span class="glyphicon glyphicon-trash"> </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <hr>
                    <% }); %>
                    
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">Razem <strong><%= total %> zł</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <button type="button" class="btn btn-success btn-block">
                                Zapłać
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


